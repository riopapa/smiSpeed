<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/smi_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="smi files"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/from_ratio"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From "
        android:textSize="16sp"
        app:layout_constraintRight_toLeftOf="@id/from_ratio"
        app:layout_constraintTop_toBottomOf="@id/smi_files"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/to_ratio"
        />
    <EditText
        android:id="@+id/from_ratio"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="10000"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/smi_files"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/to_ratio"
        android:layout_margin="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To "
        android:textSize="16sp"
        app:layout_constraintRight_toLeftOf="@id/to_ratio"
        app:layout_constraintTop_toBottomOf="@id/from_ratio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/convert"
        />
    <EditText
        android:id="@+id/to_ratio"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="10000"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/from_ratio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/convert"
        android:layout_margin="8dp"
        />
    <Button
        android:id="@+id/convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/to_ratio"
        />

</androidx.constraintlayout.widget.ConstraintLayout>